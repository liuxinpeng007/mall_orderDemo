<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.order.mapper.OrderMapper">

    <resultMap id="orderResultMap" type="com.mall.order.entity.Order">
        <result column="id" property="id"/>
        <result column="userId"  property="userId" />
        <result column="orderDate"  property="orderDate" />
        <result column="status"  property="status" />
        <result column="amount"  property="amount" />
    </resultMap>

    <select id="getOrderById" resultMap="orderResultMap" parameterType="String">
        select id,userId,orderDate,status,amount
        from t_order
        where id = #{id}
    </select>

    <select id="getOrderByUserId" resultMap="orderResultMap" parameterType="String">
        select id,userId,orderDate,status,amount
        from t_order
        where userId = #{userId}
    </select>

    <insert id="addOrder" parameterType="com.mall.order.entity.Order">
        insert into t_order (id,userId,orderDate,status,amount)
        values (#{id},#{userId},#{orderDate},#{status},#{amount})
    </insert>

</mapper>
